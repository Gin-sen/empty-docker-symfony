{% extends 'base.html.twig' %}

{% block title %}Welcome to your profile!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row no-gutter">
        <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image">

        </div>
        <div class="col-md-8 col-lg-6">
            <div class="truc d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
{#                        <div class="col-md-9 col-lg-8 mx-auto">#}
{#                            <h3 class="user-heading mb-4">You are logged in as {{ app.user.email }}</h3>#}
{#                        </div>#}
                        <span class="col-md-3"></span>

                        <div class="col-md-12 watch-card">
                            <div class="user-title col-md-12">
                                <span>{{ app.user.username }}</span><a href="#">update</a><br/>
                                <span>{{ app.user.email }}</span>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4"><img src="http://i.ytimg.com/i/MXDyVR2tclKWhbqNforSyA/mq1.jpg" alt="artist-image" width="150" height="150"></div>
                            </div>
                            <div>
                                <span>Description :</span>
                                <p>
                                    {% if (app.user.description == null) %}Describe yourself!
                                    {% else %}{{ app.user.description }}
                                    {% endif %}
                                </p>
                            </div>
                            <div class="listing-tab col-md-12">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" id="myTabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#track" aria-controls="track" role="tab" data-toggle="tab">Top tracks</a></li>
